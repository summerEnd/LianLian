<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginRight="@dimen/dimen_35"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/invite_bg"/>

    <ImageView
        android:id="@+id/close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:src="@drawable/close"/>

    <ImageView
        android:layout_below="@id/close"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:src="@drawable/bingo"/>

    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/white_fill_rect"
        android:paddingBottom="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_35"
        android:paddingRight="@dimen/dimen_35"
        android:paddingTop="@dimen/dimen_15"
        >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center_vertical"
            android:text="大圣想约你"
            android:textColor="#3a3a3a"
            android:textSize="@dimen/text_16"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_7"
            android:drawableLeft="@drawable/location"
            android:gravity="center_vertical"
            android:text="北京人民光藏"
            android:textColor="#808080"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chatTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_25"
                android:src="@drawable/dismiss"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/receive_ta"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/leaveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="在你离线的2天5小时又34分钟内"
        android:textColor="#fff"
        android:textSize="@dimen/text_13"/>

    <TextView
        android:id="@+id/paoyou_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leaveTime"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="有10010人想约你"
        android:textColor="#fff"
        android:textSize="@dimen/text_13"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/infoLayout"
        android:layout_alignRight="@id/infoLayout"
        android:layout_below="@id/paoyou_num"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/white_fill_rect"
        android:text="去看看"
        android:textColor="#e5376b"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_15"
        android:drawableLeft="@drawable/share"
        android:gravity="center_vertical"
        android:text="分享这一刻感动"
        android:textColor="#fff"/>
</RelativeLayout>