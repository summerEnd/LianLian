<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lianlian.ui.main.chumo.ChumoDetailActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/div_horizontal"
        app:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mid_black"
            android:padding="@dimen/dimen_8">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/person1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/address_detail_text1"
                    android:drawableLeft="@drawable/address"
                    android:text="地点：大望路"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:drawableLeft="@drawable/tel"
                    android:text="010-0101092"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:drawableLeft="@drawable/cost"
                    android:text="人均消费：¥1231"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/gray92"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:text="评分：9.3"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:text="被加入56个收藏"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mid_black"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_15">

            <TextView
                style="@style/chumo_detail_button1"
                android:text="加入收藏"/>

            <TextView
                style="@style/chumo_detail_button1"
                android:layout_marginLeft="@dimen/dimen_20"
                android:drawableLeft="@drawable/pinglun"
                android:text="我要评论"/>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_15"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@color/mid_black"
            android:layout_height="wrap_content"
            app:divider="@drawable/div_horizontal"
            app:showDividers="middle"
            app:dividerPadding="@dimen/dimen_8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/address_detail_text1"
                    android:text="谁在这练"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:text="(共192位)"
                    android:textColor="@color/gray92"
                    android:textSize="@dimen/text_13"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/address_detail_text1"
                    android:drawableRight="@drawable/rightarrow_grey"
                    android:gravity="center_vertical"
                    android:text="查看全部"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/address_detail_text1"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:text="大V:"/>

                <ImageView
                    style="@style/chumo_detail_avatar1"/>

                <ImageView
                    style="@style/chumo_detail_avatar1"/>

                <ImageView
                    style="@style/chumo_detail_avatar1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/address_detail_text1"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:text="练友:"/>

                <ImageView
                    style="@style/chumo_detail_avatar1"/>

                <ImageView
                    style="@style/chumo_detail_avatar1"/>

                <ImageView style="@style/chumo_detail_avatar1"/>

                <ImageView style="@style/chumo_detail_avatar1"/>

                <ImageView style="@style/chumo_detail_avatar1"/>

                <ImageView style="@style/chumo_detail_avatar1"/>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>