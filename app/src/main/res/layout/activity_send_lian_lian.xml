<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/mid_black"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_7"
        >


        <ImageView
            android:id="@+id/addImage"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_7"
            android:layout_weight="1"
            android:background="@drawable/add_image_03"
            />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/black1c"
            android:padding="@dimen/dimen_7"
            >


            <EditText
                android:id="@+id/editContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_selector"
                android:drawableLeft="@drawable/edit"
                android:editable="false"
                android:hint="此刻的心情"
                android:textColor="@color/grayE9"
                android:textSize="@dimen/text_14"
                />

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:text="60"
                android:textColor="@color/grayE9"
                android:textSize="@dimen/text_14"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/recordTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="@string/recore_voice_pic"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/recore_dsc"
            android:textColor="@color/grayE9"
            android:textSize="@dimen/text_14"
            />

        <com.lianlian.ui.widget.RecordView
            android:id="@+id/recordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>
