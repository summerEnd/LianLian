<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#13161b"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#1e2228" >

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/leftarrow_grey"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="录制声音"
            android:textColor="#fd1164"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>
    <!-- vertical -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:text="录制有声图片   (6s)"
        android:textColor="#ffffff"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="声音将配合头像出现在“遇见”板块里，被所有人听到，六秒钟捕获TA的心，遇见你的“Lian”"
        android:textColor="#7a7b7d"
        android:textSize="16sp" >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/myself_editor_record_micropBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
             android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/microphone_pink" />

        <ImageView
            android:id="@+id/myself_editor_record_playBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/myself_editor_record_recordBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/record" />
        
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myself_editor_record_uploadBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/upload"
            android:visibility="visible" />

        <TextView
            android:id="@+id/myself_editor_record_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="40sp"
            android:visibility="visible"
            android:text="6''" />

    </LinearLayout>

</LinearLayout>