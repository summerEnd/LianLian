<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginRight="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="#fff"/>

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_20"
        android:src="@drawable/close"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15"
        android:src="@drawable/congratulations"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_25"
        android:id="@+id/avatarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:src="@drawable/ic_launcher"/>

        <ImageView
            android:layout_marginLeft="@dimen/dimen_80"
            android:id="@+id/avatar2"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarLayout"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
        android:text="你和大圣互相喜欢对方\n已经成为恋友"
        android:textColor="#3a3a3a"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50"
        android:drawableLeft="@drawable/location"
        android:gravity="center_vertical"
        android:text="北京人民光藏"
        android:textColor="#808080"/>


    <ImageView
        android:id="@+id/chatTa"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        android:layout_below="@id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dimen_25"
        android:src="@drawable/chat_ta"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatTa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_25"
        android:drawableLeft="@drawable/share_gray"
        android:gravity="center_vertical"
        android:text="分享这一刻感动"
        android:textColor="#808080"/>

</RelativeLayout>