<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/contentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_failed"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/vip"
            android:text="王大丫"
            android:textColor="#fff"
            android:textSize="@dimen/text_15"
            />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获10101元"
            android:textColor="#fff"
            android:textSize="@dimen/text_15"
            />

        <com.sp.lib.widget.AutoLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name">

            <TextView
                android:id="@+id/tv_label1"
                style="@style/home_item_text"
                android:layout_marginRight="@dimen/dimen_4"
                android:text="asfasdf"/>

            <TextView
                android:id="@+id/tv_label2"
                style="@style/home_item_text"
                android:text="从速起走出来的男人"/>
        </com.sp.lib.widget.AutoLayout>

    </RelativeLayout>
</FrameLayout>